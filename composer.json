{
    "name": "syntexa/framework",
    "description": "A modern PHP framework with proper separation of concerns and runtime module loading",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Taras Hanych",
            "email": "taras.ganych@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "./packages/*"
        }
    ],
    "require": {
        "php": "^8.4",
        "syntexa/syntexa-module-user": "*",
        "syntexa/syntexa-module-auth": "*",
        "syntexa/syntexa-module-api": "*"
    },
    "autoload": {
        "psr-4": {
            "Syntexa\\Core\\": "vendor/syntexa/core/src/",
            "Syntexa\\Modules\\": "src/modules/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}