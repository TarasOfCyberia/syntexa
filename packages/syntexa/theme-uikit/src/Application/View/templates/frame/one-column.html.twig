<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>{{ title|default('Syntexa') }}</title>
    <style>
      body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,"Helvetica Neue",Arial,sans-serif;margin:0;padding:0;background:#f6f7f9;color:#111}
      header,footer{padding:16px 24px;background:#fff;border-bottom:1px solid #e5e7eb}
      footer{border-top:1px solid #e5e7eb;border-bottom:none;margin-top:24px}
      main{max-width:960px;margin:24px auto;padding:0 24px}
      .breadcrumbs{max-width:960px;margin:8px auto 0;padding:0 24px;color:#6b7280;font-size:14px}
      a{color:#2563eb;text-decoration:none}
      a:hover{text-decoration:underline}
      .card{background:#fff;border:1px solid #e5e7eb;border-radius:8px;padding:20px}
    </style>
  </head>
  <body>
    <header>
      {{ header|default('<strong>Syntexa UI</strong>')|raw }}
    </header>
    <nav class="breadcrumbs">
      {{ breadcrumbs|default('')|raw }}
    </nav>
    <main>
      <div class="card">
        {{ main|default(content|default(''))|raw }}
      </div>
    </main>
    <footer>
      {{ footer|default('Â© ' ~ ("now"|date("Y")) ~ ' Syntexa')|raw }}
    </footer>
  </body>
</html>


